{

    "manifest_version": 2,
    "name": "QRL-Share",
    "version": "1.1.1",
  
    "description": "Quicly share links among devices with qr codes.",
    
    "icons": {
      "96": "Icons/Icon96px.png"
    },

    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["qr_generator.js"]
        }
      ],
  
    "permissions": [
      "activeTab"
      
    ],
  
    "browser_action": {
      "browser_style": true,
      "default_icon": "Icons/Icon96px.png",
      "default_title": "QRL-Share",
      "default_popup": "popup/popup.html"
    }
  
  
  }
